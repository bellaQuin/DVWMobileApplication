<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_drawer"
    android:background="#b6e1df"
    tools:context=".Goals.Goal_Question_3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/nav_toolbar"
            android:id="@+id/toolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/montserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MY GOALS\n MORE DETAIL"
                android:textSize="24dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/goal_1_text"
                />

            <TextView
                android:layout_below="@+id/goal_1_text"
                android:id="@+id/goal_question_3_box_1"
                android:background="@drawable/button_shape"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:hint="A:"
                android:fontFamily="@font/montserrat"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_below="@+id/goal_question_3_box_3"
                android:background="@drawable/button_shape"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:hint="So that/because:"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:id="@+id/goal_question_3_box_2"
                android:fontFamily="@font/montserrat"
                />

            <TextView
                android:layout_below="@+id/goal_question_3_box_1"
                android:id="@+id/goal_question_3_box_3"
                android:background="@drawable/button_shape"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:text="B"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:fontFamily="@font/montserrat"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_below="@+id/goal_question_3_box_2"
                android:background="@drawable/button_shape"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:hint="So that/because:"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:id="@+id/goal_question_3_box_4"
                android:fontFamily="@font/montserrat"/>
<!--                />-->

            <TextView
                android:id="@+id/text"
                android:layout_below="@id/goal_question_3_box_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textColor="#fff"
                android:fontFamily="@font/montserrat"
                android:text="If you can't identify deeper'why's', you can just click on the 'Next' button.However make sure, you have double checked and you really understand why you want to achieve your goal!"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@id/text"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape"
                android:layout_centerHorizontal="true"
                android:text="NEXT"
                android:textSize="20dp"
                android:onClick="btn_next_my_goals_more_details"
                android:textColor="#84c2c8"
                android:id="@+id/my_goals_more_details_btn"
                android:fontFamily="@font/montserrat"/>

                </RelativeLayout>

            </ScrollView>


        </RelativeLayout>

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_drawer"
        app:menu="@menu/toolbar_nav_drawer"
        />



</androidx.drawerlayout.widget.DrawerLayout>