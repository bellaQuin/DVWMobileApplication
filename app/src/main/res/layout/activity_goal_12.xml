<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/layout_drawer"
    android:background="#b6e1df"
    tools:context=".Goals.Goal_12">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/nav_toolbar"
            android:id="@+id/toolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/title_layout">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat"
                            android:text="ROADMAP"
                            android:textSize="26dp"
                            android:gravity="top"
                            android:layout_marginTop="20dp"
                            android:id="@+id/title_roadmap_steps"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_below="@id/title_layout"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/image_layout">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:background="@drawable/iconclipboard"

                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="370dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image_layout"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:id="@+id/paragraph_one_layout">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/montserrat"
                            android:text="Now it is time to create your own road map for achieving your goal. Donâ€™t worry if some of the steps present unique challenges. (we will look at how to overcome those challenges shortly). "
                            android:textSize="18dp"
                            android:textColor="@android:color/white"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="370dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/paragraph_one_layout"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:id="@+id/paragraph_two_layout">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:text="Click &quot;NEXT&quot; to begin creating your roadmap "
                            android:textSize="18dp"
                            android:textColor="@android:color/white"
                            />

                    </RelativeLayout>


                    <Button
                        android:fontFamily="@font/montserrat"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/paragraph_two_layout"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/button_shape"
                        android:layout_centerHorizontal="true"
                        android:text="NEXT"
                        android:textSize="20dp"
                        android:id="@+id/goal_12"
                        android:onClick="btn_next_goal_12"

                        android:textColor="#84c2c8"/>





                </RelativeLayout>



            </ScrollView>


        </RelativeLayout>



    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_drawer"
        app:menu="@menu/toolbar_nav_drawer"
        />


</androidx.drawerlayout.widget.DrawerLayout>