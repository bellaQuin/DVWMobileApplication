<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/layout_drawer"
    android:background="#b6e1df"
    tools:context=".ResilienceandCopingMechanisms.Slide_17_options">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/nav_toolbar"
            android:id="@+id/toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >



                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Stress relief\n options"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:id="@+id/why"
                        android:textSize="25sp"/>

                </RelativeLayout>



                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#b6e1df"
                            android:textColor="#7E57C2"
                            android:onClick="btn_Breathing_and_pulse_rate"
                            android:text="Breathing and pulse rate"
                            />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#b6e1df"
                            android:textColor="#2962FF"
                            android:onClick="btn_Positive_images"
                            android:text="Positive images"
                            />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#b6e1df"
                            android:textColor="#7986CB"
                            android:onClick="btn_Music"
                            android:text="Music"
                            />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#b6e1df"
                            android:textColor="#64B5F6"
                            android:onClick="btn_Videos"
                            android:text="Videos"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#b6e1df"
                            android:textColor="#66BB6A"
                            android:onClick="btn_Exercise"
                            android:text="Exercise"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#b6e1df"
                            android:textColor="#C0CA33"
                            android:onClick="btn_Stance"
                            android:text="Stance (physicality)"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#b6e1df"
                            android:textColor="#827717"
                            android:onClick="btn_Gratefulness"
                            android:text="Gratefulness &amp; Positive thinking"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#b6e1df"
                            android:textColor="#F57F17"
                            android:onClick="btn_Using_nature"
                            android:text="Using nature"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#b6e1df"
                            android:textColor="#D84315"
                            android:onClick="btn_Saying_no"
                            android:text="Saying no"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#b6e1df"
                            android:textColor="#FF5722"
                            android:onClick="btn_Meditation_and_Mindfulness"
                            android:text="Meditation and Mindfulness"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#b6e1df"
                            android:textColor="#E65100"
                            android:onClick="btn_Purpose_and_meaning"
                            android:text="Purpose and meaning"
                            />


                    </LinearLayout>

                    <Button

                        android:id="@+id/next"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="#ffffff"
                        android:layout_marginBottom="300dp"
                        android:fontFamily="@font/montserrat"
                        android:onClick="btn_next"
                        android:text="Next"
                        android:textColor="#84c2c8"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_drawer"
        app:menu="@menu/toolbar_nav_drawer"
        />

</androidx.drawerlayout.widget.DrawerLayout>