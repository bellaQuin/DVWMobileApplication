<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/layout_drawer"
    android:background="#b6e1df"
    tools:context=".Goals.Goal_11">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/nav_toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_layout_1">

                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="14dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/title_layout"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/montserrat"
                            android:text="Run marathon in unser 4h 30mins in 12 months time"
                            android:textSize="18dp"
                            android:textAlignment="center"
                            android:id="@+id/title_roadmap_steps"/>



                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_layout"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:id="@+id/steps_layout"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        >
                        <LinearLayout
                            android:layout_width="220dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/layout_1"
                            >


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="0dp"
                                android:id="@+id/card_view_step_1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/button_shape">



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Run marathon and survive"
                                        android:textSize="14dp"
                                        android:fontFamily="@font/montserrat"
                                        android:textStyle="bold"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginLeft="20dp"
                                        android:textAlignment="center"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/text_1"/>









                                </RelativeLayout>




                            </androidx.cardview.widget.CardView>








                        </LinearLayout>

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="60dp"
                            android:background="@drawable/icon_arrow_down"
                            android:layout_marginTop="21dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/arrow_1"
                            android:elevation="10dp"

                            />

                        <LinearLayout
                            android:layout_width="220dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="52dp"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/layout_2"
                            >


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/card_view_step_2">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/button_shape">



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Run 18miles"
                                        android:layout_centerHorizontal="true"
                                        android:textSize="14dp"
                                        android:fontFamily="@font/montserrat"
                                        android:textStyle="bold"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginLeft="20dp"
                                        android:textAlignment="center"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/text_2"/>









                                </RelativeLayout>




                            </androidx.cardview.widget.CardView>








                        </LinearLayout>


                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="60dp"
                            android:background="@drawable/icon_arrow_down"
                            android:layout_marginTop="60dp"
                            android:layout_centerHorizontal="true"
                            android:elevation="10dp"
                            android:id="@+id/arrow_2"
                            />


                        <LinearLayout
                            android:layout_width="220dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="99dp"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/layout_3"
                            >


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:id="@+id/card_view_step_3">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/button_shape">



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:text="Regular half marathons"
                                        android:textSize="14dp"
                                        android:fontFamily="@font/montserrat"
                                        android:textStyle="bold"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginLeft="20dp"
                                        android:textAlignment="center"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/text_3"/>









                                </RelativeLayout>




                            </androidx.cardview.widget.CardView>








                        </LinearLayout>

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="60dp"
                            android:background="@drawable/icon_arrow_down"
                            android:layout_marginTop="109dp"
                            android:layout_centerHorizontal="true"
                            android:elevation="10dp"
                            android:id="@+id/arrow_3"
                            />

                        <LinearLayout
                            android:layout_width="220dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="145dp"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/layout_4"
                            >


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:id="@+id/card_view_step_4">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/button_shape">



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Running 5 days per week"
                                        android:layout_centerHorizontal="true"
                                        android:textSize="14dp"
                                        android:fontFamily="@font/montserrat"
                                        android:textStyle="bold"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginLeft="20dp"
                                        android:textAlignment="center"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/text_4"/>









                                </RelativeLayout>




                            </androidx.cardview.widget.CardView>








                        </LinearLayout>

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="60dp"
                            android:background="@drawable/icon_arrow_down"
                            android:layout_marginTop="161dp"
                            android:layout_centerHorizontal="true"
                            android:elevation="10dp"
                            android:id="@+id/arrow_4"
                            />

                        <LinearLayout
                            android:layout_width="220dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="192dp"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/layout_5"
                            >


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:id="@+id/card_view_step_5">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/button_shape">



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Find time"
                                        android:layout_centerHorizontal="true"
                                        android:textSize="14dp"
                                        android:fontFamily="@font/montserrat"
                                        android:textStyle="bold"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginLeft="20dp"
                                        android:textAlignment="center"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/text_5"/>









                                </RelativeLayout>




                            </androidx.cardview.widget.CardView>








                        </LinearLayout>


                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="60dp"
                            android:background="@drawable/icon_arrow_down"
                            android:layout_marginTop="208dp"
                            android:layout_centerHorizontal="true"
                            android:elevation="10dp"
                            android:id="@+id/arrow_5"
                            />


                        <LinearLayout
                            android:layout_width="220dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="239dp"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/layout_6"
                            >


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:id="@+id/card_view_step_6">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/button_shape">



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Get work and partner on board"
                                        android:layout_centerHorizontal="true"
                                        android:textSize="14dp"
                                        android:fontFamily="@font/montserrat"
                                        android:textStyle="bold"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginLeft="20dp"
                                        android:textAlignment="center"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/text_6"/>









                                </RelativeLayout>




                            </androidx.cardview.widget.CardView>








                        </LinearLayout>


                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="60dp"
                            android:background="@drawable/icon_arrow_down"
                            android:layout_marginTop="255dp"
                            android:layout_centerHorizontal="true"
                            android:elevation="10dp"
                            android:id="@+id/arrow_6"
                            />

                        <LinearLayout
                            android:layout_width="220dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="286dp"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/layout_7"
                            >


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:id="@+id/card_view_step_7">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/button_shape">



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Do first jog"
                                        android:textSize="14dp"
                                        android:layout_centerHorizontal="true"
                                        android:fontFamily="@font/montserrat"
                                        android:textStyle="bold"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginLeft="20dp"
                                        android:textAlignment="center"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/text_7"/>









                                </RelativeLayout>




                            </androidx.cardview.widget.CardView>








                        </LinearLayout>

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="60dp"
                            android:background="@drawable/icon_arrow_down"
                            android:layout_marginTop="295dp"
                            android:layout_centerHorizontal="true"
                            android:elevation="10dp"
                            android:id="@+id/arrow_7"
                            />



                        <LinearLayout
                            android:layout_width="220dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="334dp"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/layout_8"
                            >


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:id="@+id/card_view_step_8">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/button_shape">



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Buy running shoes?"
                                        android:textSize="14dp"
                                        android:layout_centerHorizontal="true"
                                        android:fontFamily="@font/montserrat"
                                        android:textStyle="bold"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginLeft="20dp"
                                        android:textAlignment="center"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/text_8"/>









                                </RelativeLayout>




                            </androidx.cardview.widget.CardView>








                        </LinearLayout>








                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/steps_layout"
                        android:orientation="horizontal"
                        android:layout_marginTop="14dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:id="@+id/bototm_text"

                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/montserrat"
                            android:text="Very unfit"
                            android:textSize="18dp"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"
                            />




                    </RelativeLayout>





                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:id="@+id/goal_layout_arrow"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:id="@+id/id">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Goal"
                                android:textSize="20dp"
                                android:fontFamily="@font/montserrat"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/id_goal"
                                android:textColor="#ff9980" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/arrow_up" >

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="90dp"
                                android:background="@drawable/icongrey_arrow_up"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="414dp"
                            android:id="@+id/wwan">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Where we are now"
                                android:textSize="20dp"
                                android:layout_centerHorizontal="true"
                                android:textAlignment="center"
                                android:textColor="#ff9980" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="350dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/arrow_down"

                            >

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_gravity="center"
                                android:layout_height="90dp"
                                android:background="@drawable/icongrey_arrow_down"
                                />

                        </LinearLayout>

                    </RelativeLayout>



                    <Button
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_shape"
                        android:fontFamily="@font/montserrat"
                        android:onClick="btn_next_goal_11"
                        android:text="NEXT"

                        android:id="@+id/goal_11"
                        android:layout_below="@+id/goal_layout_arrow"
                        android:layout_centerHorizontal="true"
                        android:textColor="#84c2c8"
                        android:textSize="20dp" />


                </RelativeLayout>



            </ScrollView>

        </RelativeLayout>







    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_drawer"
        app:menu="@menu/toolbar_nav_drawer"
        />

</androidx.drawerlayout.widget.DrawerLayout>