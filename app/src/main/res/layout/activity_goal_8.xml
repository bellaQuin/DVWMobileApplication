<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/layout_drawer"
    android:background="#b6e1df"
    tools:context=".Goals.Goal_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/nav_toolbar"
            android:id="@+id/toolbar"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUILDING A ROADMAP (PLAN)"
                android:textAlignment="center"
                android:textColor="#326b6f"
                android:fontFamily="@font/montserrat"
                android:textSize="30dp"
                android:id="@+id/title"
                android:layout_centerHorizontal="true"

                />


            <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:background="@drawable/iconrd"
                android:layout_below="@+id/title"
                android:id="@+id/pc_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Rd_map_plan"
                android:id="@+id/pg_1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="#ffff"
                android:fontFamily="@font/montserrat"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/pc_img"
                />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/pg_1"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true"
        android:text="NEXT"
        android:textSize="20dp"
        android:id="@+id/goal_8"
        android:fontFamily="@font/montserrat"
        android:onClick="btn_goal_8_next"

        android:textColor="#84c2c8"/>
</RelativeLayout>

            </ScrollView>





        </RelativeLayout>




    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_drawer"
        app:menu="@menu/toolbar_nav_drawer"
        />

</androidx.drawerlayout.widget.DrawerLayout>