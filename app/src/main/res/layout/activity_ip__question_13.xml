<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Issues_Problems.IP_Question_13"
    android:fitsSystemWindows="true"
    android:id="@+id/layout_drawer"
    android:background="#b6e1df">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/nav_toolbar"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/toolbar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="IMPROVEMENTS"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/imagetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/question_1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_people_talk"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="You will need to write something in the text boxes in order to progress to the next coaching question."
                android:textColor="#fff"
                android:textSize="24dp"
                />

            <ImageView
                android:id="@+id/icon_people_talk"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/scsteps" />

        </LinearLayout>

        <EditText
            android:id="@+id/improvements_text_box"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_below="@id/imagetext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/montserrat"
            android:gravity="top"
            android:hint="How can you influence or improve the situation?\n\n"
            />

        <Button
            android:id="@+id/improvements_btn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@id/improvements_text_box"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button_shape"
            android:onClick="btn_next_improvements"
            android:text="NEXT"
            android:textColor="#84c2c8"
            android:textSize="20dp"
            android:visibility="gone"/>


    </RelativeLayout>
</ScrollView>



    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_drawer"
        app:menu="@menu/toolbar_nav_drawer"
        />

</androidx.drawerlayout.widget.DrawerLayout>