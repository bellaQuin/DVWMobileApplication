<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Goals.Goal_Question_6"
    android:fitsSystemWindows="true"
    android:id="@+id/layout_drawer"
    android:background="#b6e1df">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/nav_toolbar"
            android:id="@+id/toolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="83dp"
                        android:layout_height="462dp"
                        android:layout_marginTop="20dp">


                        <LinearLayout
                            android:id="@+id/arrow_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="90dp"
                                android:background="@drawable/arrow_up"

                                />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/arrow_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="379dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center"
                                android:background="@drawable/icon_arrow_down" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/lay">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true"
                            >



                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="400dp"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/steps_layout_layout"
                                    android:orientation="vertical">



                                    <TextView
                                        android:layout_width="220dp"
                                        android:layout_height="60dp"
                                        android:hint="GOAL:"
                                        android:fontFamily="@font/montserrat"
                                        android:layout_marginTop="5dp"
                                        android:textColor="#326b6f"
                                        android:textSize="23dp"
                                        android:id="@+id/title_1"
                                        android:background="@android:color/white"/>

                                    <TextView
                                        android:layout_width="220dp"
                                        android:layout_height="60dp"
                                        android:hint="To do this first I must....."
                                        android:fontFamily="@font/montserrat"
                                        android:textAlignment="center"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center_vertical"
                                        android:textColor="#326b6f"
                                        android:id="@+id/id_txt"
                                        android:background="@android:color/white"/>

                                </LinearLayout>

                            </ScrollView>


                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="500dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="40dp"
                        android:id="@+id/bototm_text"
                        android:gravity="center"
                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/montserrat"
                            android:text="MY ROADMAP"
                            android:textSize="20dp"
                            android:textAlignment="center"

                            />


                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_next_my_rd_map_2"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="530dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/button_shape"
                        android:fontFamily="@font/montserrat"
                        android:onClick="btn_next"
                        android:text="NEXT"
                        android:textColor="#326b6f"
                        android:textSize="28dp" />
                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_drawer"
        app:menu="@menu/toolbar_nav_drawer"
        />

</androidx.drawerlayout.widget.DrawerLayout>