<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/layout_drawer"
    android:background="#b6e1df"
    tools:context=".Goals.Goal_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/nav_toolbar"
            android:id="@+id/toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:id="@+id/image">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YOU HAVE THE POWER"
                android:layout_centerHorizontal="true"
                android:textColor="#326b6f"
                android:textAlignment="center"
                android:id="@+id/text_1"
                android:layout_marginTop="20dp"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DialogBoxGoalHelp_text_1"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/text_1"
                android:fontFamily="@font/montserrat"
                android:id="@+id/text_2"
                android:textSize="18dp" />


            <ImageView
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:background="@drawable/iconimgyourtube"
                android:layout_below="@id/text_2"
                android:layout_centerHorizontal="true"
                android:onClick="gotourl"
                android:id="@+id/img_2"
                android:layout_marginTop="20dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DialogBoxGoalHelp_text_2"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/img_2"
                android:id="@+id/text_3"
                android:textSize="18dp" />


<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="300dp"-->
<!--                android:background="@drawable/sc_goal_18_part_2"-->
<!--                android:layout_below="@id/img_2"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:id="@+id/img_3"-->
<!--                android:layout_marginTop="20dp"/>-->

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_3"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_shape"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:text="NEXT"
                android:textSize="20dp"
                android:id="@+id/goal_15"
                android:onClick="btn_next_goal_15"

                android:textColor="#84c2c8"/>






        </RelativeLayout>

        </ScrollView>



    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_drawer"
        app:menu="@menu/toolbar_nav_drawer"
        />

</androidx.drawerlayout.widget.DrawerLayout>