<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/layout_drawer"
    android:background="#b6e1df"
    tools:context=".Goals.Goal_16">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/nav_toolbar"
            android:id="@+id/toolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROGRESS CHECK"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                android:id="@+id/title"
                android:layout_centerHorizontal="true"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ProgressCheck_paragraph_one"
                android:id="@+id/pg_1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#ffff"
                android:fontFamily="@font/montserrat"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/title"
                />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:background="@drawable/iconprogresscheck"
                android:layout_below="@+id/pg_1"
                android:id="@+id/pc_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ProgressCheck_paragraph_two"
                android:id="@+id/pg_2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#ffff"
                android:fontFamily="@font/montserrat"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/pc_img"
                />

            <Button
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@id/pg_2"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape"
                android:layout_centerHorizontal="true"
                android:text="NEXT"
                android:fontFamily="@font/montserrat"
                android:textSize="20dp"
                android:id="@+id/goal_16"
                android:onClick="btn_next_goal_16"
                android:textColor="#84c2c8"/>






        </RelativeLayout>


    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_drawer"
        app:menu="@menu/toolbar_nav_drawer"
        />

</androidx.drawerlayout.widget.DrawerLayout>


