                            android:layout_height="wrap_content"
                            android:layout_below="@id/top_2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_toRightOf="@id/right_2"
