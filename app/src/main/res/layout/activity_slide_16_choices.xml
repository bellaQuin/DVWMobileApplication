<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/layout_drawer"
    android:background="#b6e1df"
    tools:context=".ResilienceandCopingMechanisms.Slide_16_choices">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/nav_toolbar"
            android:id="@+id/toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >



                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="professional help"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:id="@+id/why"
                        android:textSize="25sp"/>

                </RelativeLayout>



                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:id="@+id/color_text"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:text="Everyone has experiences at some\n point in their life that leave them\n reeling. Unfortunately, this is part of our\n human experience."
                        />

                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#000"
                        android:gravity="center"
                        android:text="Smart people understand when they\n canâ€™t cope and they get help.\n\n Not so smart people suffer in silence\n until they break.\n\nDon't be one of the ones that break!"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:id="@+id/contact_number"
                        android:onClick="contact_number"
                        android:background="#b6e1df"
                        >

                        <RelativeLayout
                            android:background="#bfdfe2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <View
                                android:id="@+id/top_2"
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="13dp"
                                android:layout_marginTop="10dp"
                                android:background="#976563"/>


                            <View
                                android:id="@+id/right_2"
                                android:layout_width="4dp"
                                android:layout_height="55dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="10dp"
                                android:background="#976563"/>

                            <View
                                android:layout_width="4dp"
                                android:layout_height="55dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:background="#976563"
                                android:layout_alignParentRight="true" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="14dp"
                                android:layout_marginTop="30dp"
                                android:layout_alignParentBottom="true"
                                android:background="#976563"
                                android:layout_marginBottom="0.5dp"/>


                            <TextView
                                android:id="@+id/text_2"
                                android:layout_toRightOf="@id/right_2"
                                android:layout_below="@id/top_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Show me some emergency\n contact numbers"
                                android:textSize="18sp"
                                android:textAllCaps="true"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="sans-serif-medium"
                                />

                            <ImageView
                                android:layout_toRightOf="@id/text_2"
                                android:layout_marginTop="10dp"
                                android:layout_centerVertical="true"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/iconarrowright"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:id="@+id/resilience"
                        android:onClick="resilience"
                        android:background="#b6e1df"
                        >

                        <RelativeLayout
                            android:background="#bfdfe2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <View
                                android:id="@+id/top_3"
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="13dp"
                                android:layout_marginTop="10dp"
                                android:background="#931f1e"/>


                            <View
                                android:id="@+id/right_3"
                                android:layout_width="4dp"
                                android:layout_height="55dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="10dp"
                                android:background="#931f1e"/>

                            <View
                                android:layout_width="4dp"
                                android:layout_height="55dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:background="#931f1e"
                                android:layout_alignParentRight="true" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="14dp"
                                android:layout_marginTop="30dp"
                                android:layout_alignParentBottom="true"
                                android:background="#931f1e"
                                android:layout_marginBottom="0.5dp"/>


                            <TextView
                                android:id="@+id/text_3"
                                android:layout_toRightOf="@id/right_3"
                                android:layout_below="@id/top_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="I need immediate coping\n strategies and exercises"
                                android:textSize="18sp"
                                android:textAllCaps="true"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="sans-serif-medium"
                                />

                            <ImageView
                                android:layout_toRightOf="@id/text_3"
                                android:layout_marginTop="10dp"
                                android:layout_centerVertical="true"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/iconarrowright"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <Button

                        android:id="@+id/next"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="20dp"
                        android:background="#ffffff"
                        android:fontFamily="@font/montserrat"
                        android:onClick="btn_next"
                        android:text="Next"
                        android:textColor="#84c2c8"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_drawer"
        app:menu="@menu/toolbar_nav_drawer"
        />

</androidx.drawerlayout.widget.DrawerLayout>