<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/layout_drawer"
    android:background="#b6e1df"
    tools:context=".Goals.Goal_9">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/nav_toolbar"
            android:id="@+id/toolbar"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/title_layout">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:text="ROADMAP STEPS"
                android:textSize="26dp"
                android:layout_marginTop="20dp"
                android:id="@+id/title_roadmap_steps"/>



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_layout">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="110dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/layout_1"
                        >


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/card_view_step_1">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/cardview_background">



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="First we have to achieve"
                                    android:textSize="18dp"
                                    android:fontFamily="@font/montserrat"
                                    android:textStyle="bold"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:textAlignment="center"
                                    android:layout_centerVertical="true" />



                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>






                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/layout_1"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:id="@+id/arrow_1">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/icon_arrow_down"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="110dp"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/layout_3"
                        android:layout_below="@id/arrow_1">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/card_view_step_3">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/cardview_background">



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Then we have to achieve"
                                    android:textSize="18dp"
                                    android:fontFamily="@font/montserrat"
                                    android:textStyle="bold"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:textAlignment="center"
                                    android:layout_centerVertical="true" />



                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/layout_3"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:id="@+id/arrow_2">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/icon_arrow_down"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="110dp"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/layout_2"
                        android:layout_below="@id/arrow_2">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/card_view_step_2">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/cardview_background">



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Then we have to achieve"
                                    android:textSize="18dp"
                                    android:fontFamily="@font/montserrat"
                                    android:textStyle="bold"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:textAlignment="center"
                                    android:layout_centerVertical="true" />



                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>



                    </LinearLayout>



                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="460dp"
                        android:layout_marginTop="60dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:id="@+id/id">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Goal"
                                android:textSize="20dp"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/id_goal"
                                android:textColor="@android:color/holo_red_light" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/arrow_up" >

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="90dp"
                                android:background="@drawable/icongrey_arrow_up"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="359dp"

                            android:id="@+id/wwan"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Where we are now"
                                android:textSize="20dp"
                                android:layout_centerHorizontal="true"
                                android:textAlignment="center"
                                android:textColor="@android:color/holo_red_light" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="299dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/arrow_down"

                            >

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_gravity="center"
                                android:layout_height="90dp"
                                android:background="@drawable/icongrey_arrow_down"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Measured by..."
                        android:textColor="#ffff"
                        android:textSize="19dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/layout_1"
                        android:layout_marginTop="39dp"
                        android:id="@+id/text_m_1"/>




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Measured by..."
                        android:textColor="#ffff"
                        android:textSize="19dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/layout_1"
                        android:layout_marginTop="90dp"
                        android:id="@+id/text_m_2"
                        android:layout_below="@+id/text_m_1"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Measured by..."
                        android:textColor="#ffff"
                        android:id="@+id/text_1"
                        android:textSize="19dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/layout_1"
                        android:layout_marginTop="90dp"
                        android:layout_below="@+id/text_m_2"/>


                    <Button
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/text_1"
                        android:layout_marginTop="90dp"
                        android:background="@drawable/button_shape"
                        android:layout_centerHorizontal="true"
                        android:text="NEXT"
                        android:fontFamily="@font/montserrat"
                        android:textSize="20dp"
                        android:id="@+id/goal_9"
                        android:onClick="btn_goal_9_next"

                        android:textColor="#84c2c8"/>






                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>



    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_drawer"
        app:menu="@menu/toolbar_nav_drawer"
        />


</androidx.drawerlayout.widget.DrawerLayout>