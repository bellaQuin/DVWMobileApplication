<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/layout_drawer"
    android:background="#b6e1df"
    tools:context=".Goals.Goal_Question_4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/toolbar"
                layout="@layout/nav_toolbar" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="593dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">


                <ScrollView
                    android:id="@+id/goalParentSV_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/goal_1_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="20dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:text="MY GOALS\n MORE DETAIL"
                                android:textSize="24dp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout7"
                            android:layout_width="93dp"
                            android:layout_height="388dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/constraintLayout2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/constraintLayout5">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="70dp"
                                android:layout_height="90dp"

                                android:layout_marginStart="16dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/arrow_up"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageButton
                                android:id="@+id/button_add"
                                android:layout_width="70dp"
                                android:layout_height="90dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="50dp"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/btn_add_background"
                                android:onClick="btn_add"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView"
                                app:srcCompat="@drawable/iconadd"
                                tools:ignore="VectorDrawableCompat" />

                            <ImageView
                                android:layout_width="81dp"
                                android:layout_height="86dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="50dp"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/icon_arrow_down"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/button_add" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout2"
                            android:layout_width="0dp"
                            android:layout_height="400dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/constraintLayout7"
                            app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"
                            app:layout_constraintVertical_bias="0.073">


                            <ScrollView
                                android:id="@+id/goalChildSV_1"
                                android:layout_width="224dp"
                                android:layout_height="372dp"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="34dp"
                                android:layout_marginEnd="40dp"
                                android:layout_marginBottom="16dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <LinearLayout
                                    android:id="@+id/steps_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/edit_text_box_1_display"
                                        android:layout_width="220dp"
                                        android:layout_height="60dp"
                                        android:background="@android:color/white"
                                        android:fontFamily="@font/montserrat"
                                        android:gravity="center_vertical"
                                        android:hint="GOAL:"
                                        android:textColor="#326b6f"
                                        android:textSize="23dp" />


                                    <TextView
                                        android:layout_width="220dp"
                                        android:layout_height="50dp"
                                        android:layout_below="@+id/edit_text_box_1"
                                        android:layout_marginTop="10dp"
                                        android:background="@android:color/white"
                                        android:fontFamily="@font/montserrat"
                                        android:gravity="center_vertical"
                                        android:hint="To do this first I must....."
                                        android:textAlignment="center"
                                        android:textColor="#326b6f" />


                                </LinearLayout>

                            </ScrollView>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

                            <Button
                                android:id="@+id/btn_next_my_rd_map_1"
                                android:layout_width="234dp"
                                android:layout_height="57dp"
                                android:layout_centerHorizontal="true"

                                android:layout_marginStart="20dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="213dp"
                                android:background="@drawable/button_shape"
                                android:fontFamily="@font/montserrat"
                                android:onClick="btn_next_next"
                                android:text="NEXT"
                                android:textColor="#326b6f"
                                android:textSize="28dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>









                    </androidx.constraintlayout.widget.ConstraintLayout>

                </ScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

