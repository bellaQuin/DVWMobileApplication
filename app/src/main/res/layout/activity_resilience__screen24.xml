<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/layout_drawer"
    android:background="#b6e1df"
    tools:context=".ResilienceandCopingMechanisms.resilience_Screen24">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/nav_toolbar"
            android:id="@+id/toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="music is personal"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:id="@+id/why"
                        android:textSize="25sp"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:textColor="#1976D2"
                        android:gravity="center"
                        android:text="There is no‘perfect’piece of\n music that will work for everyone.\n List your favourite music on your\n phone/PC."
                        />
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:textColor="#1976D2"
                        android:text=" Suggestions:"
                        />
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:textColor="#1976D2"
                        android:text=" 1. Classical: ‘Nimrod’(Elgar) or‘Air on G’(Bach)"
                        />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:textColor="#1976D2"
                        android:text=" 2. Film : ‘Happy’(Despicable Me 2 – Pharrell Williams) or ‘I Will Get Back Up Again’ (Trolls – Anna Kendrick)"
                        />
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:textColor="#1976D2"
                        android:text=" 3. Modern/Dance:  ‘Happier’(Marshmellow ft Bastille), ‘Where I’ll Be Waiting’ (Rich Edwards ft. Cozi Zuehlsdorff)"
                        />
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:textColor="#1976D2"
                        android:text=" 4. Rock: ‘We are the Champions’ (Queen)"
                        />
                    <Button
                        android:id="@+id/shw_images"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="16dp"
                        android:textColor="#2b59a2"
                        android:layout_marginEnd="32dp"
                        android:background="#ffffff"
                        android:layout_gravity="center"
                        android:onClick="btn_show"
                        android:text="SHOW ME WHAT OTHERS \n LISTEN TO"
                        android:fontFamily="@font/montserrat" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btn_back"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="32dp"
                            android:background="#ffffff"
                            android:fontFamily="@font/montserrat"
                            android:text="BACK"
                            android:textColor="#2b59a2"
                            android:onClick="btn_back"/>

                        <Button
                            android:id="@+id/btn_next"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginLeft="130dp"
                            android:background="#ffffff"
                            android:fontFamily="@font/montserrat"
                            android:text="NEXT"
                            android:textColor="#c4513e"
                            android:onClick="btn_next"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_drawer"
        app:menu="@menu/toolbar_nav_drawer"
        />

</androidx.drawerlayout.widget.DrawerLayout>