<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Issues_Problems.IP_Question_Five_Part_One"
    android:fitsSystemWindows="true"
    android:id="@+id/layout_drawer"
    android:background="#b6e1df">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include
            layout="@layout/nav_toolbar"
            android:id="@+id/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/toolbar">

            <ImageView
                android:layout_width="127dp"
                android:layout_height="127dp"
                android:background="@drawable/ic_phone_receiver"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_marginTop="10dp"
                android:text="Call us now!\n We are here to listen!"
                android:fontFamily="@font/montserrat"/>

            <Button
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_shape"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:text="Befrienders Worldwide"
                android:textSize="20dp"
                android:onClick="btn_befrienders"
                android:textColor="#84c2c8"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"/>

            <Button
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_shape"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:text="Suicide Crisis Lines  "
                android:textSize="20dp"
                android:onClick="btn_suicide_crisis_lines"
                android:textColor="#84c2c8"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"/>

        </LinearLayout>







    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_drawer"
        app:menu="@menu/toolbar_nav_drawer"
        />



</androidx.drawerlayout.widget.DrawerLayout>