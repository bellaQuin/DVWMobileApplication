<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuickCoachingOptions"
    android:id="@+id/layout_drawer"
    android:background="#b6e1df"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/nav_toolbar"
            android:id="@+id/toolbar"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:id="@+id/relativelayout1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What do you need help with today?"
                android:textSize="30dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginRight="190dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:id="@+id/title"
                android:fontFamily="@font/montserrat"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="290dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"

                    android:onClick="btn_issue"


                    android:id="@+id/card_view_1_anim">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#b6e1df"
                        android:id="@+id/layout1">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/white"
                            android:id="@+id/boader_1" />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="145dp"
                            android:background="@android:color/white"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_alignParentEnd="true"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="40dp"
                            android:layout_centerVertical="true"
                            android:textColor="@android:color/white"
                            android:text="I need coaching to manage a issue or problem"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:id="@+id/textLeft"
                            android:fontFamily="@font/montserrat"
                            />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/ic_help"
                            android:layout_marginRight="45dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>


                        <View
                            android:layout_width="4dp"
                            android:layout_height="145dp"
                            android:background="@android:color/white"
                            android:layout_alignParentStart="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"

                            />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@android:color/white"
                            android:layout_gravity="bottom"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>






            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"

                    android:onClick="btn_goals"
                    app:cardPreventCornerOverlap="false"

                    android:id="@+id/card_view_2_anim"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#b6e1df"
                        >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/white"
                            />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="145dp"
                            android:background="@android:color/white"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_alignParentEnd="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_centerVertical="true"
                            android:textColor="@android:color/white"
                            android:text="I need coaching so that I can achieve a goal "
                            android:textSize="20dp"
                            android:gravity="center"
                            android:layout_toRightOf="@id/imageGoal"
                            android:fontFamily="@font/montserrat"
                            />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/ic_target"
                            android:layout_marginLeft="45dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/imageGoal"
                            />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="145dp"
                            android:background="@android:color/white"
                            android:layout_alignParentStart="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@android:color/white"
                            android:layout_gravity="bottom"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_drawer"
        app:menu="@menu/toolbar_nav_drawer"
        />
</androidx.drawerlayout.widget.DrawerLayout>